<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ice Cream Store - Expense Management</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Shared CSS -->
    <link rel="stylesheet" href="../shared/css/style.css?v=1.2">
    
    <style>
        /* Page-specific styles only - layout handled by framework */
        .expense-header {
            background: var(--gradient-info);
            color: var(--white);
            padding: 3rem 2rem;
            text-align: center;
            border-radius: var(--border-radius-lg);
            margin-bottom: 2rem;
        }

        .stats-overview {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stats-card {
            background: var(--white);
            border-radius: var(--border-radius-lg);
            padding: 1.5rem;
            text-align: center;
            box-shadow: var(--shadow-light);
            border-left: 4px solid var(--info-color);
            transition: var(--transition);
        }

        .stats-card:nth-child(2) {
            border-left-color: var(--success-color);
        }

        .stats-card:nth-child(3) {
            border-left-color: var(--warning-color);
        }

        .stats-card:nth-child(4) {
            border-left-color: var(--danger-color);
        }

        .stats-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
        }

        .stats-number {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--info-color);
        }

        .stats-card:nth-child(2) .stats-number {
            color: var(--success-color);
        }

        .stats-card:nth-child(3) .stats-number {
            color: var(--warning-color);
        }

        .stats-card:nth-child(4) .stats-number {
            color: var(--danger-color);
        }

        .stats-label {
            font-size: 0.9rem;
            color: var(--secondary-color);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .management-section {
            background: var(--light-color);
            padding: 2rem;
            border-radius: var(--border-radius-lg);
            margin-bottom: 2rem;
        }

        .management-section h4 {
            color: var(--dark-color);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .management-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .management-card {
            background: var(--white);
            border: 2px solid transparent;
            border-radius: var(--border-radius-lg);
            padding: 2rem;
            text-align: center;
            transition: var(--transition);
            cursor: pointer;
            text-decoration: none;
            color: var(--dark-color);
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 200px;
        }

        .management-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-heavy);
            border-color: var(--info-color);
            text-decoration: none;
            color: var(--dark-color);
        }

        .card-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--info-color);
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark-color);
        }

        .card-description {
            font-size: 0.95rem;
            opacity: 0.8;
            color: var(--secondary-color);
            margin-bottom: 1.5rem;
            line-height: 1.5;
        }

        .card-stats {
            display: flex;
            justify-content: space-around;
            margin-top: auto;
            padding-top: 1rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--info-color);
            display: block;
        }

        .stat-label {
            font-size: 0.8rem;
            color: var(--secondary-color);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .recent-activity {
            background: var(--white);
            padding: 2rem;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-light);
            margin-bottom: 2rem;
        }

        .recent-activity h5 {
            color: var(--dark-color);
            margin-bottom: 1.5rem;
        }

        .activity-item {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--info-light);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: var(--info-color);
        }

        .activity-content {
            flex-grow: 1;
        }

        .activity-title {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.25rem;
        }

        .activity-details {
            font-size: 0.9rem;
            color: var(--secondary-color);
        }

        .activity-amount {
            font-weight: 600;
            color: var(--info-color);
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            .expense-header {
                padding: 2rem 1rem;
            }

            .stats-overview {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 1rem;
            }

            .management-cards {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .management-card {
                padding: 1.5rem;
                min-height: 150px;
            }

            .card-icon {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Page Header -->
    <div class="expense-header">
        <div>
            <i class="fas fa-receipt fa-4x mb-3"></i>
            <h1>Expense Management</h1>
            <p class="mb-0 opacity-75">Track receipts, expenses, and business spending</p>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview">
        <div class="stats-card">
            <div class="stats-number" id="total-receipts">0</div>
            <div class="stats-label">Total Receipts</div>
        </div>
        <div class="stats-card">
            <div class="stats-number" id="total-amount">$0.00</div>
            <div class="stats-label">Total Amount</div>
        </div>
        <div class="stats-card">
            <div class="stats-number" id="this-month">$0.00</div>
            <div class="stats-label">This Month</div>
        </div>
        <div class="stats-card">
            <div class="stats-number" id="pending-receipts">0</div>
            <div class="stats-label">Pending</div>
        </div>
    </div>

    <!-- Management Section -->
    <div class="management-section">
        <h4><i class="fas fa-cogs me-2"></i>Expense Management</h4>
        <div class="management-cards">
            <!-- Receipts Management -->
            <a href="receipts.html" class="management-card">
                <div class="card-icon">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <div class="card-title">Receipts Management</div>
                <div class="card-description">
                    Create, view, and manage expense receipts with detailed line items and categorization.
                </div>
                <div class="card-stats">
                    <div class="stat-item">
                        <span class="stat-number" id="receipts-count">0</span>
                        <span class="stat-label">Total</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" id="receipts-this-week">0</span>
                        <span class="stat-label">This Week</span>
                    </div>
                </div>
            </a>

            <!-- Expense Analytics (Coming Soon) -->
            <div class="management-card" onclick="Alert.comingSoon('Expense Analytics')">
                <div class="card-icon">
                    <i class="fas fa-chart-pie"></i>
                </div>
                <div class="card-title">Expense Analytics</div>
                <div class="card-description">
                    Analyze spending patterns, categorize expenses, and generate comprehensive reports.
                </div>
                <div class="card-stats">
                    <div class="stat-item">
                        <span class="stat-number">Soon</span>
                        <span class="stat-label">Reports</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">Soon</span>
                        <span class="stat-label">Analytics</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity">
        <h5><i class="fas fa-clock me-2"></i>Recent Activity</h5>
        <div id="recent-activities">
            <!-- Sample activities -->
            <div class="activity-item">
                <div class="activity-icon">
                    <i class="fas fa-plus"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">New receipt added</div>
                    <div class="activity-details">Premium ingredients from Fresh Dairy Co.</div>
                </div>
                <div class="activity-amount">$45.98</div>
            </div>
            <div class="activity-item">
                <div class="activity-icon">
                    <i class="fas fa-edit"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Receipt updated</div>
                    <div class="activity-details">Equipment maintenance receipt modified</div>
                </div>
                <div class="activity-amount">$128.50</div>
            </div>
            <div class="activity-item">
                <div class="activity-icon">
                    <i class="fas fa-trash"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Receipt deleted</div>
                    <div class="activity-details">Duplicate utility bill removed</div>
                </div>
                <div class="activity-amount">-$89.25</div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-3">
        <div class="col-md-6">
            <button class="btn btn-primary btn-lg w-100" onclick="window.location.href='receipts.html'">
                <i class="fas fa-plus me-2"></i>Add New Receipt
            </button>
        </div>
        <div class="col-md-6">
            <button class="btn btn-outline-secondary btn-lg w-100" onclick="refreshData()">
                <i class="fas fa-sync-alt me-2"></i>Refresh Data
            </button>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Configuration -->
    <script src="../config.js?v=1.1"></script>
    
    <!-- Shared JavaScript -->
    <script src="../shared/js/auth.js"></script>
    <script src="../shared/js/status.js"></script>
    <script src="../shared/js/alerts.js"></script>
    <script src="../shared/js/load-partials.js"></script>

    <script>
        class ExpensePage {
            constructor() {
                this.init();
            }

            async init() {
                console.log('💰 Initializing Expense Management Page (Standardized Layout)...');
                
                // Setup standardized layout framework
                await window.PartialLoader.setupStandardLayout({
                    pageTitle: 'Expense Management',
                    includeSidebar: true,
                    includeHeader: true
                });
                
                // Initialize authentication
                const auth = new AuthService();
                if (!auth.isAuthenticated()) {
                    console.log('❌ User not authenticated, redirecting to login');
                    window.location.href = '../login.html';
                    return;
                }

                // Load expense data
                await this.loadExpenseData();
                
                console.log('✅ Expense Management Page initialized successfully');
            }

            async loadExpenseData() {
                try {
                    await this.loadReceiptStats();
                } catch (error) {
                    console.error('❌ Error loading expense data:', error);
                }
            }

            async loadReceiptStats() {
                try {
                    // In a real implementation, this would fetch from the API
                    console.log('📊 Loading receipt statistics...');
                    
                    // Sample data for demo
                    const stats = {
                        totalReceipts: 18,
                        totalAmount: 2635.73,
                        thisMonth: 1245.50,
                        pendingReceipts: 3,
                        receiptsCount: 18,
                        receiptsThisWeek: 5
                    };

                    // Update UI with stats
                    document.getElementById('total-receipts').textContent = stats.totalReceipts;
                    document.getElementById('total-amount').textContent = `$${stats.totalAmount.toFixed(2)}`;
                    document.getElementById('this-month').textContent = `$${stats.thisMonth.toFixed(2)}`;
                    document.getElementById('pending-receipts').textContent = stats.pendingReceipts;
                    document.getElementById('receipts-count').textContent = stats.receiptsCount;
                    document.getElementById('receipts-this-week').textContent = stats.receiptsThisWeek;

                    console.log('✅ Receipt statistics loaded successfully');
                } catch (error) {
                    console.error('❌ Error loading receipt statistics:', error);
                    Alert.error('Loading Error', 'Could not load receipt statistics');
                }
            }
        }

        // Refresh data function
        function refreshData() {
            if (window.expensePage) {
                window.expensePage.loadExpenseData();
                Alert.success('Data Refreshed', 'Expense data has been updated');
            }
        }

        // Initialize the page when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            window.expensePage = new ExpensePage();
        });
    </script>
</body>
</html> 