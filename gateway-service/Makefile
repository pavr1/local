# Ice Cream Store Gateway Service Makefile
# This Makefile provides commands for managing the gateway service

# Colors for output
CYAN := \033[0;36m
GREEN := \033[0;32m
YELLOW := \033[1;33m
RED := \033[0;31m
RESET := \033[0m

# Default target
.DEFAULT_GOAL := help

# Binary name
BINARY_NAME := gateway-service
BUILD_DIR := bin

## ðŸ¦ Ice Cream Store Gateway Service Management

help: ## Show this help message
	@echo "$(CYAN)ðŸ¦ðŸŒ Ice Cream Store Gateway Service$(RESET)"
	@echo "======================================"
	@echo ""
	@echo "$(YELLOW)ðŸ“‹ Available Commands:$(RESET)"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "  $(CYAN)%-20s$(RESET) %s\n", $$1, $$2}'
	@echo ""
	@echo "$(YELLOW)ðŸš€ Common Workflows:$(RESET)"
	@echo "  $(GREEN)make install$(RESET)          # Complete setup and start service"
	@echo "  $(GREEN)make fresh$(RESET)            # Fresh start: clean, build, start"
	@echo "  $(GREEN)make dev$(RESET)              # Run in development mode"
	@echo ""
	@echo "$(YELLOW)ðŸ“– Prerequisites:$(RESET)"
	@echo "  â€¢ Go 1.21+ must be installed"
	@echo "  â€¢ Data service should be running for full functionality"
	@echo "  â€¢ Auth service should be running for full functionality"
	@echo ""

## ðŸš€ Service Management Commands

start: build ## Start the gateway service
	@echo "$(CYAN)ðŸš€ Starting Gateway Service...$(RESET)"
	@echo "$(YELLOW)ðŸ“¡ Gateway will be available at http://localhost:8080$(RESET)"
	@./$(BUILD_DIR)/$(BINARY_NAME)

stop: ## Stop the gateway service (if running in background)
	@echo "$(YELLOW)ðŸ›‘ Stopping Gateway Service...$(RESET)"
	@pkill -f "$(BINARY_NAME)" 2>/dev/null || echo "$(YELLOW)No running gateway service found$(RESET)"

restart: stop start ## Restart the gateway service
	@echo "$(GREEN)ðŸ”„ Gateway Service restarted successfully!$(RESET)"

## ðŸ“Š Monitoring & Debugging Commands

health: ## Check service health
	@echo "$(CYAN)ðŸ¥ Checking gateway service health...$(RESET)"
	@if curl -f http://localhost:8080/api/health > /dev/null 2>&1; then \
		echo "$(GREEN)âœ… Gateway service is healthy and ready!$(RESET)"; \
	else \
		echo "$(RED)âŒ Gateway service is not responding$(RESET)"; \
		exit 1; \
	fi

test: ## Run basic connectivity test
	@echo "$(CYAN)ðŸ§ª Running Gateway Service tests...$(RESET)"
	@curl -f http://localhost:8080/api/health > /dev/null 2>&1 && \
		echo "$(GREEN)âœ… Health check test passed!$(RESET)" || \
		(echo "$(RED)âŒ Health check test failed!$(RESET)" && exit 1)
	@curl -f http://localhost:8080/api/hello > /dev/null 2>&1 && \
		echo "$(GREEN)âœ… Hello endpoint test passed!$(RESET)" || \
		(echo "$(RED)âŒ Hello endpoint test failed!$(RESET)" && exit 1)

## ðŸ”§ Development Commands

build: deps ## Build the gateway service binary
	@echo "$(CYAN)ðŸ”¨ Building Gateway Service...$(RESET)"
	@mkdir -p $(BUILD_DIR)
	@go build -o $(BUILD_DIR)/$(BINARY_NAME) main.go
	@echo "$(GREEN)âœ… Build completed: $(BUILD_DIR)/$(BINARY_NAME)$(RESET)"

dev: ## Run the service in development mode
	@echo "$(CYAN)ðŸ› ï¸  Running Gateway Service in development mode...$(RESET)"
	@echo "$(YELLOW)ðŸ“¡ Service will be available at http://localhost:8080$(RESET)"
	@go run main.go

deps: ## Install Go dependencies
	@echo "$(CYAN)ðŸ“¦ Installing Go dependencies...$(RESET)"
	@go mod download
	@go mod tidy
	@echo "$(GREEN)âœ… Dependencies installed$(RESET)"

lint: ## Run linter
	@echo "$(CYAN)ðŸ” Running linter...$(RESET)"
	@go vet ./...
	@echo "$(GREEN)âœ… Linting completed$(RESET)"

format: ## Format Go code
	@echo "$(CYAN)âœ¨ Formatting Go code...$(RESET)"
	@go fmt ./...
	@echo "$(GREEN)âœ… Code formatted$(RESET)"

## ðŸ“¦ Setup & Installation Commands

install: deps build ## Complete setup: install dependencies and build service
	@echo "$(GREEN)ðŸŽ‰ Gateway Service installation completed!$(RESET)"
	@echo "$(CYAN)ðŸ“ Service Details:$(RESET)"
	@echo "   Gateway API: http://localhost:8080"
	@echo "   Health:      http://localhost:8080/api/health"
	@echo "   Hello API:   http://localhost:8080/api/hello"
	@echo ""
	@echo "$(CYAN)ðŸ§ª Test Commands:$(RESET)"
	@echo "   make test                      # Run all tests"
	@echo "   curl http://localhost:8080/api/health"

fresh: clean deps build test info ## Fresh start: clean, build, test, and show info
	@echo "$(GREEN)ðŸŽ‰ Fresh Gateway Service setup completed!$(RESET)"
	@echo "$(YELLOW)ðŸ’¡ Service binary is ready. Run 'make start' in a separate terminal to launch the service$(RESET)"
	@echo "$(CYAN)ðŸ§ª Running tests to verify the binary works...$(RESET)"
	@echo "$(YELLOW)Note: Gateway tests require the service to be started manually$(RESET)"

## ðŸ§¹ Cleanup Commands

clean: ## Clean up build artifacts
	@echo "$(YELLOW)ðŸ§¹ Cleaning up Gateway Service...$(RESET)"
	@rm -rf $(BUILD_DIR)
	@echo "$(GREEN)âœ… Cleanup completed$(RESET)"

clean-all: clean ## Clean up everything including Go build cache
	@echo "$(YELLOW)ðŸ§¹ Deep cleaning...$(RESET)"
	@go clean -cache -modcache -testcache 2>/dev/null || true
	@echo "$(GREEN)âœ… Deep cleanup completed$(RESET)"

## ðŸ“‹ Information Commands

info: ## Show service information and URLs
	@echo "$(CYAN)ðŸ“‹ Gateway Service Information$(RESET)"
	@echo "================================="
	@echo ""
	@echo "$(YELLOW)ðŸ”— Service URLs:$(RESET)"
	@echo "   Base URL:     http://localhost:8080"
	@echo "   Health Check: http://localhost:8080/api/health"
	@echo "   API Docs:     http://localhost:8080/api/"
	@echo ""
	@echo "$(YELLOW)ðŸ”‘ API Endpoints:$(RESET)"
	@echo "   GET  /api/health             # Health check"
	@echo "   GET  /api/hello              # Hello endpoint"
	@echo "   POST /api/hello              # Hello with name"
	@echo ""
	@echo "$(YELLOW)ðŸ§ª Test Commands:$(RESET)"
	@echo "   # Health check"
	@echo "   curl http://localhost:8080/api/health"
	@echo ""
	@echo "   # Hello endpoint"
	@echo "   curl http://localhost:8080/api/hello"
	@echo ""
	@echo "   # Hello with name"
	@echo "   curl -X POST http://localhost:8080/api/hello \\"
	@echo "        -H 'Content-Type: application/json' \\"
	@echo "        -d '{\"name\":\"World\"}'"
	@echo ""

version: ## Show version information
	@echo "$(CYAN)ðŸ“‹ Version Information$(RESET)"
	@echo "========================="
	@echo "Gateway Service: 1.0.0"
	@echo "Go Version: $$(go version)"

# List all targets for tab completion
.PHONY: help start stop restart health test build dev deps lint format install fresh clean clean-all info version 