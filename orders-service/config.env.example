# Ice Cream Store - Orders Service Configuration
# Copy this file to config.env and adjust values as needed

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8083

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=icecream_store
DB_SSL_MODE=disable

# JWT Configuration (must match auth-service)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Logging Configuration
LOG_LEVEL=info

# Business Configuration
DEFAULT_TAX_RATE=13.0       # Costa Rica IVA rate (%)
DEFAULT_SERVICE_RATE=10.0   # Service charge rate (%)
ORDER_TIMEOUT=30            # Order timeout in minutes

# Docker Network (when running in containers)
# DB_HOST=icecream_postgres 